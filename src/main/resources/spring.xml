<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="client" class="ua.epam.spring.core.beans.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="John Smith"/>
    </bean>

    <bean id="eventLogger" class="ua.epam.spring.core.loggers.ConsoleEventLogger"/>

    <bean id="event" class="ua.epam.spring.core.beans.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
    </bean>

    <bean id="app" class="ua.epam.spring.core.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="eventLogger"/>
        <property name="eventMessages">
            <list>
                <value>Some event from user 1</value>
                <value>Some event from user 2</value>
                <value>Some event from user 2</value>
                <value>Some event from user 2</value>
                <value>Some event from user 2</value>
                <value>Some event from user 1</value>
            </list>
        </property>
    </bean>

</beans>